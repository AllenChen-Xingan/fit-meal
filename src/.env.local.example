# ===========================================
# FitMeal Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# Database (Neon PostgreSQL)
# Get your connection string from https://neon.tech
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Authentication
# Generate a strong random string for JWT signing
# You can use: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here-min-32-chars"
JWT_SECRET="your-jwt-secret-here-min-32-chars"

# Public URL (used for OAuth callbacks etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# Optional: Docker build flag (set to 'true' for standalone output)
# DOCKER_BUILD="true"

# Optional: Enable database mock mode (useful for development without database)
# USE_MOCK_DATA="true"
